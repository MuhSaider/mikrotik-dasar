                                                <div class="flex items-center justify-between">
                                                    <span class="text-sm font-medium" x-text="tutorial.title"></span>
                                                    <svg x-show="isTutorialCompleted(tutorial.id)"
                                                        class="w-4 h-4 text-green-500" fill="none" stroke="currentColor"
                                                        viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                    </svg>
                                                </div>
                                            </a>
                                        </template>
                                    </div>
                                </div>
                            </div>

                            <!-- Main Content -->
                            <div class="lg:col-span-3">
                                <div x-show="currentTutorial" class="bg-white rounded-xl shadow-md p-6">
                                    <!-- Tutorial Header -->
                                    <div class="mb-6">
                                        <h1 class="text-2xl font-bold text-gray-800 mb-2"
                                            x-text="currentTutorial?.title"></h1>
                                        <p class="text-gray-600 mb-4" x-text="currentTutorial?.description"></p>
                                        <div class="flex items-center space-x-4 text-sm text-gray-500">
                                            <span class="flex items-center">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                                <span x-text="`${currentTutorial?.readTime || 15} menit`"></span>
                                            </span>
                                            <span class="flex items-center">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z">
                                                    </path>
                                                </svg>
                                                <span x-text="currentTutorial?.level || 'Pemula'"></span>
                                            </span>
                                        </div>
                                    </div>

                                    <!-- Tutorial Content -->
                                    <div class="tutorial-content prose max-w-none" x-html="currentTutorial?.content">
                                    </div>

                                    <!-- Examples Section -->
                                    <div x-show="currentTutorial?.examples?.length > 0" class="mt-8">
                                        <h3 class="text-lg font-semibold text-gray-800 mb-4">Contoh Konfigurasi</h3>
                                        <div class="space-y-4">
                                            <template x-for="example in currentTutorial.examples" :key="example.id">
                                                <div class="example-box">
                                                    <h4 class="font-medium text-gray-800 mb-2" x-text="example.title">
                                                    </h4>
                                                    <p class="text-sm text-gray-600 mb-3" x-text="example.description">
                                                    </p>
                                                    <div class="code-container">
                                                        <button @click="copyCode($event, example.code)"
                                                            class="copy-button">Copy</button>
                                                        <pre><code class="language-bash" x-text="example.code"></code></pre>
                                                    </div>
                                                    <div x-show="example.output" class="mt-3">
                                                        <p class="text-sm font-medium text-gray-700 mb-1">Output:</p>
                                                        <div class="bg-gray-900 text-green-400 p-3 rounded text-sm font-mono"
                                                            x-text="example.output"></div>
                                                    </div>
                                                </div>
                                            </template>
                                        </div>
                                    </div>

                                    <!-- Quiz Section -->
                                    <div x-show="currentTutorial?.quiz?.length > 0" class="mt-8">
                                        <h3 class="text-lg font-semibold text-gray-800 mb-4">Quiz</h3>
                                        <div class="space-y-4">
                                            <template x-for="(question, index) in currentTutorial.quiz"
                                                :key="question.id">
                                                <div class="border border-gray-200 rounded-lg p-4">
                                                    <p class="font-medium text-gray-800 mb-3">
                                                        <span x-text="`${index + 1}. ${question.question}`"></span>
                                                    </p>
                                                    <div class="space-y-2">
                                                        <template x-for="option in JSON.parse(question.options)"
                                                            :key="option">
                                                            <label
                                                                class="quiz-option flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer"
                                                                :class="{
                                                                       'selected': userAnswers[question.id] === option,
                                                                       'correct': showResults && option === question.correctAnswer,
                                                                       'incorrect': showResults && userAnswers[question.id] === option && option !== question.correctAnswer
                                                                   }">
                                                                <input type="radio" :name="`question-${question.id}`"
                                                                    :value="option" x-model="userAnswers[question.id]"
                                                                    class="mr-3">
                                                                <span x-text="option"></span>
                                                            </label>
                                                        </template>
                                                    </div>
                                                    <div x-show="showResults && question.explanation"
                                                        class="mt-3 p-3 bg-blue-50 rounded-lg">
                                                        <p class="text-sm text-blue-800" x-text="question.explanation">
                                                        </p>
                                                    </div>
                                                </div>
                                            </template>
                                        </div>
                                        <div class="mt-6 flex space-x-4">
                                            <button @click="checkQuiz()" x-show="!showResults"
                                                class="px-6 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors">
                                                Periksa Jawaban
                                            </button>
                                            <button @click="markAsCompleted()" x-show="showResults"
                                                class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
                                                Tandai Selesai
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Navigation -->
                                    <div class="mt-8 pt-6 border-t border-gray-200">
                                        <div class="flex justify-between">
                                            <button @click="navigateTutorial('prev')" x-show="currentTutorialIndex > 0"
                                                class="flex items-center px-4 py-2 text-gray-600 hover:text-gray-800 transition-colors">
                                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2" d="M15 19l-7-7 7-7"></path>
                                                </svg>
                                                Materi Sebelumnya
                                            </button>
                                            <button @click="navigateTutorial('next')"
                                                x-show="currentTutorialIndex < tutorials.length - 1"
                                                class="flex items-center px-4 py-2 text-orange-600 hover:text-orange-700 transition-colors">
                                                Materi Selanjutnya
                                                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2" d="M9 5l7 7-7 7"></path>
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quiz Page -->
                <div x-show="currentPage === 'quiz'" x-cloak class="py-6">
                    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
                        <div class="bg-white rounded-xl shadow-md p-6">
                            <h1 class="text-2xl font-bold text-gray-800 mb-6">Quiz & Sertifikat</h1>

                            <div class="space-y-6">
                                <!-- Quiz Cards -->
                                <template x-for="quiz in allQuizzes" :key="quiz.id">
                                    <div
                                        class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                                        <div class="flex justify-between items-start">
                                            <div>
                                                <h3 class="font-semibold text-gray-800" x-text="quiz.title"></h3>
                                                <p class="text-sm text-gray-600 mt-1" x-text="quiz.description"></p>
                                                <div class="flex items-center mt-2 space-x-4 text-sm text-gray-500">
                                                    <span x-text="`${quiz.questions.length} soal`"></span>
                                                    <span x-text="`${quiz.duration} menit`"></span>
                                                </div>
                                            </div>
                                            <button @click="startQuiz(quiz.id)"
                                                class="px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors">
                                                Mulai Quiz
                                            </button>
                                        </div>
                                    </div>
                                </template>

                                <!-- Certificate Section -->
                                <div
                                    class="mt-8 p-6 bg-gradient-to-r from-orange-50 to-red-50 rounded-lg border border-orange-200">
                                    <h3 class="text-lg font-semibold text-gray-800 mb-2">Sertifikat Kelulusan</h3>
                                    <p class="text-gray-600 mb-4">Selesaikan semua quiz dengan nilai minimal 70% untuk
                                        mendapatkan sertifikat.</p>
                                    <div class="flex items-center justify-between">
                                        <div>
                                            <p class="text-sm text-gray-500">Progress Quiz</p>
                                            <p class="text-2xl font-bold text-orange-600"
                                                x-text="`${quizProgress}/5 Selesai`"></p>
                                        </div>
                                        <button x-show="quizProgress === 5"
                                            class="px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
                                            Download Sertifikat
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="app.js"></script>
</body>

</html>